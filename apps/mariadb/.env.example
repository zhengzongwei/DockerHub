# MariaDB 12.1.2-noble 容器配置
# 复制此文件为 .env 并修改相应配置

# 容器配置
CONTAINER_NAME=mariadb
NETWORK_NAME=mariadb-network

# 端口配置
HOST_PORT=3306

# 数据库认证配置
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=mydatabase
MYSQL_USER=myuser
MYSQL_PASSWORD=myuser_password_here

# 卷映射配置 - 使用 /data/apps/mariadb/ 路径
DATA_VOLUME=/data/apps/mariadb/data
CONFIG_VOLUME=/data/apps/mariadb/config
BACKUP_VOLUME=/data/apps/mariadb/backups
INIT_SCRIPTS_VOLUME=/data/apps/mariadb/init-scripts

# 性能配置
MAX_CONNECTIONS=100
MAX_ALLOWED_PACKET=256M
INNODB_BUFFER_POOL_SIZE=256M

# 时区配置 (可选)
TZ=Asia/Shanghai